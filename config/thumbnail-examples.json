{
  "_comment": "THUMBNAIL CONFIGURATION EXAMPLES - Copy sections to commission-config.json",
  
  "example_1_basic_setup": {
    "description": "Simple local image files",
    "thumbnails": {
      "commissionTypes": {
        "2d": "images/2d-art.png",
        "3d": "images/3d-render.jpg", 
        "other": "images/reference.png"
      },
      "subTypes": {
        "simplified": "images/chibi.png",
        "headshot": "images/portrait.jpg",
        "bust": "images/upper-body.png",
        "fullbody": "images/full-character.jpg"
